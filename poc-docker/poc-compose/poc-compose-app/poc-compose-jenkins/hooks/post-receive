#!/bin/bash

CONTAINER_JENKINS=poc_jenkins
JENKINS_USER=admin
JENKINS_PASSWORD=admin

# Get branch name from ref head

if ! [ -t 0 ]; then
  read -a ref
fi

IFS='/' read -ra REF <<< "${ref[2]}"
branch="${REF[2]}"

if [ $branch == "master" ]; then
crumb=$(curl -u "$JENKINS_USER:$JENKINS_PASSWORD" -s 'http://$CONTAINER_JENKINS:8080/crumbIssuer/api/xml?xpath=concat(//crumbRequestField,":",//crumb)')
curl -u "JENKINS_USER:$JENKINS_PASSWORD" -H "$crumb" -X POST http://$CONTAINER_JENKINS:8080/job/poc-app-maven-simple-autogenerated/build?delay=0sec

  if [ $? -eq 0 ] ; then
    echo "*** Ok"
  else
    echo "*** Error"
  fi
fi
